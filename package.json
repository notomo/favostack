{
  "private": true,
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "copy-webpack-plugin": "^5.1.1",
    "jest": "^25.1.0",
    "ts-jest": "^25.2.1",
    "ts-loader": "^6.2.1",
    "typescript": "^3.8.3",
    "webextension-polyfill-ts": "^0.13.0",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "minimist": ">=1.2.2"
  },
  "dependencies": {},
  "scripts": {
    "test": "jest --coverage",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:ext": "npm run build:prod && mkdir -p ext/chrome && zip -r dist.zip dist && mv dist.zip ext/chrome/",
    "watch": "webpack -w --mode development"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*\\.test\\.ts"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "**/src/scripts/**/*.ts"
    ],
    "coverageDirectory": "./coverage/"
  }
}
