{
  "private": true,
  "name": "favostack",
  "type": "module",
  "version": "0.1.4",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "@types/chrome": "^0.0.280",
    "typescript": "^5.7.2",
    "wxt": "^0.19.13"
  },
  "dependencies": {},
  "scripts": {
    "dev": "wxt",
    "build": "wxt zip",
    "test": "jest --coverage",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "jest": {
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": ["**/entrypoints/**/*\\.test\\.ts"],
    "verbose": true,
    "collectCoverageFrom": ["**/src/**/*.ts"],
    "coverageDirectory": "./coverage/"
  }
}
