{
  "private": true,
  "devDependencies": {
    "copy-webpack-plugin": "^5.0.4",
    "ts-loader": "^6.2.1",
    "typescript": "^3.6.4",
    "webextension-polyfill-ts": "^0.9.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "@types/jest": "^24.0.23",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0"
  },
  "dependencies": {},
  "scripts": {
    "test": "jest --coverage",
    "build": "webpack --mode development",
    "build:prod": "webpack --mode production",
    "build:ext": "npm run build:prod && mkdir -p ext/chrome && zip -r dist.zip dist && mv dist.zip ext/chrome/",
    "watch": "webpack -w --mode development"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/src/**/*\\.test\\.ts"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "**/src/scripts/**/*.ts"
    ],
    "coverageDirectory": "./coverage/"
  }
}
